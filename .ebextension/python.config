option_settings:
  "aws:elasticbeanstalk:container:python":
    WSGIPath: main:app  # Refers to main.py where `app = FastAPI()`

packages:
  yum:
    git: []  # Optional, if your code pulls from Git or you use pip from source

commands:
  01_upgrade_pip:
    command: "python3 -m pip install --upgrade pip"

  02_install_uvicorn:
    command: "pip install uvicorn"
